@using Newtonsoft.Json;
@using Newtonsoft.Json.Serialization;
@model SobMedidaCortinas.Web.Models.HomeModel
@{
    ViewBag.Title = "Cortinas sob medida";
    var contractResolver = new DefaultContractResolver
    {
        NamingStrategy = new CamelCaseNamingStrategy()
    };
}
@section javascript {
    <!-- Custom Theme JavaScript -->
    <script src="/content/js/home.js"></script>
}

<script>
    window.home = {
        cortinas: @Html.Raw(JsonConvert.SerializeObject(Model.Cortinas, new JsonSerializerSettings { ContractResolver = contractResolver })),
        persianas: @Html.Raw(JsonConvert.SerializeObject(Model.Persianas, new JsonSerializerSettings { ContractResolver = contractResolver })),
        ideias: @Html.Raw(JsonConvert.SerializeObject(Model.Ideias, new JsonSerializerSettings { ContractResolver = contractResolver }))
    };
</script>


<section id="missao">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-heart fa-stack-2x text-primary"></i>
                    <i class="fa fa-universal-access fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Missão</h4>
                <p class="text-muted">Atender aos clientes com qualidade e responsabilidade, agregando charme, conforto e bom gosto às cortinas.</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-asl-interpreting fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Sob Medida</h4>
                <p class="text-muted">Confecção de cortinas sob medida é a nossa especialidade. Nenhum trabalho é muito pequeno ou muito grande.</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-asterisk fa-stack-2x text-primary"></i>
                    <i class="fa fa-clock-o fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">Pontualidade</h4>
                <p class="text-muted">Contando com uma rede de profissionais, conseguimos sempre entregar nossas cortinas no prazo.</p>
            </div>
        </div>
    </div>
</section>

