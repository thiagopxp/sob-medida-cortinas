{
  "name": "sob-medida-cortinas",
  "version": "2.0.0",
  "description": "Sob Medida Cortinas - ASP.NET Core 8",
  "scripts": {
    "build:less": "lessc wwwroot/less/agency.less wwwroot/css/agency.css",
    "build:less:min": "lessc --clean-css wwwroot/less/agency.less wwwroot/css/agency.min.css",
    "build": "npm run build:less && npm run build:less:min",
    "watch:less": "nodemon --watch wwwroot/less --ext less --exec \"npm run build\"",
    "dev": "npm run build && npm run watch:less"
  },
  "devDependencies": {
    "less": "^4.2.0",
    "less-plugin-clean-css": "^1.5.1",
    "nodemon": "^3.0.2"
  }
}
